{
  "name": "vortex",
  "version": "1.0.0",
  "description": "Vortex - A Event-Driven E-Commerce Ecosystem",
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --check . --ignore-path .prettierignore && turbo format",
    "format:fix": "prettier --write . --ignore-path .prettierignore && turbo format:fix",
    "ci:fix": "pnpm lint:fix && pnpm format:fix",
    "clean": "turbo clean && rimraf node_modules pnpm-lock.yaml",
    "clean:turbo": "turbo clean:turbo && rimraf .turbo node_modules pnpm-lock.yaml",
    "prepare": "husky",
    "commit": "cz",
    "auth:dev": "pnpm --filter=auth-service dev",
    "auth:build": "pnpm --filter=auth-service build",
    "order:dev": "pnpm --filter=order-service dev",
    "product:dev": "pnpm --filter=product-service dev",
    "notification:dev": "pnpm --filter=notification-service dev",
    "gateway:dev": "pnpm --filter=gateway dev"
  },
  "workspaces": [
    "packages/*",
    "services/*",
    "gateway"
  ],
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@vortex/config": "workspace:*",
    "@vortex/eslint-config": "workspace:*",
    "@vortex/typescript-config": "workspace:*",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^2.4.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "zod": "^4.3.5"
  }
}
