{
  "name": "vortex",
  "version": "1.0.0",
  "description": "Vortex - A Event-Driven E-Commerce Ecosystem",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm run --parallel start:dev",
    "build": "pnpm run -r build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --ignore-path .prettierignore --check \"**/*.+(js|ts|json)\"",
    "format:fix": "prettier --write --ignore-path .prettierignore \"**/*.+(js|ts|json)\"",
    "ci:fix": "pnpm run lint:fix && pnpm run format:fix",
    "prepare": "husky",
    "commit": "cz"
  },
  "workspaces": [
    "services/*"
  ],
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.29",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.53.0"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "zod": "^4.3.5"
  }
}
