{
  "name": "vortex",
  "version": "1.1.0",
  "private": true,
  "description": "Vortex - A Event-Driven E-Commerce Ecosystem",
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --check . --ignore-path .prettierignore && turbo format",
    "format:fix": "prettier --write . --ignore-path .prettierignore && turbo format:fix",
    "ci:fix": "pnpm lint:fix && pnpm format:fix",
    "clean": "turbo clean && rimraf node_modules",
    "clean:turbo": "turbo clean:turbo && rimraf .turbo node_modules",
    "prepare": "husky",
    "commit": "cz",
    "auth:dev": "pnpm --filter=auth-service dev",
    "auth:build": "pnpm --filter=auth-service... build",
    "order:dev": "pnpm --filter=order-service dev",
    "order:build": "pnpm --filter=order-service... build",
    "product:dev": "pnpm --filter=product-service dev",
    "product:build": "pnpm --filter=product-service... build",
    "notification:dev": "pnpm --filter=notification-service dev",
    "notification:build": "pnpm --filter=notification-service... build",
    "gateway:dev": "pnpm --filter=gateway dev",
    "gateway:build": "pnpm --filter=gateway... build",
    "release": "semantic-release"
  },
  "workspaces": [
    "packages/*",
    "services/*",
    "gateway"
  ],
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "keywords": [],
  "author": "https://github.com/shahadathhs",
  "license": "UNLICENSED",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.3",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@vortex/config": "workspace:*",
    "@vortex/eslint-config": "workspace:*",
    "@vortex/typescript-config": "workspace:*",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.3.6"
  }
}
